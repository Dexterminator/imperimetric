recipe = token+
token = measurement / word / whitespace
word = #'[^\s]+'
measurement = quantity <whitespace>* unit <#'(?!\w)'>
whitespace = #'\s+'
quantity = mixed | integer | decimal | fraction
mixed = integer <whitespace> fraction
integer = #'\d+'
decimal = #'\d+\.\d+'
fraction = #'\d+\/\d+'
unit = l | dl | cl | ml
l = #'(?i)l' | #'(?i)liters?' | #'(?i)litres?'
dl = #'(?i)dls?' | #'(?i)deciliters?'
cl = #'(?i)cls?' | #'(?i)centiliters?'
ml = #'(?i)mls?' | #'(?i)milliliters?'
